<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_background"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="0dp"
        tools:context=".ItemListActivity"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/item_list_container"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white_gray"
                android:padding="0dp">
                <!--app:cardBackgroundColor="@android:color/background_light"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardUseCompatPadding="true"
                app:elevation="4dp"-->
                >


                <android.support.v7.widget.RecyclerView
                    android:background="@color/white_gray"
                    android:id="@+id/item_list"
                    android:name="com.br.cassio.cassiobookstore.ItemListFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="LinearLayoutManager"
                    tools:context="com.br.cassio.cassiobookstore.ItemListActivity"
                    tools:listitem="@layout/item_list_content" />


            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/my_divider"
            android:layout_width="2dp"
            android:background="@color/my_background"
            android:layout_height="match_parent"
            android:src="@android:drawable/arrow_down_float">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrows_left" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/item_detail_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="@color/white" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="@dimen/mFabArrowSize"
        android:layout_height="@dimen/mFabArrowSize"
        app:layout_anchor="@id/my_divider"
        app:layout_anchorGravity="center"
        app:maxImageSize="10dp"
        app:fabCustomSize="@dimen/mFabArrowSize"
        app:backgroundTint="@color/white"
        app:rippleColor="@color/design_default_color_primary"
        android:clickable="true"
        android:layout_marginLeft="-30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_arrows_left"
        android:layout_centerInParent="true"
        android:focusable="true" />

</android.support.design.widget.CoordinatorLayout>