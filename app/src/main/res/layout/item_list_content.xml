<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.cassio.cassiobookstore.view.activity.ItemListActivityBase">

    <data>

        <variable
            name="bookVO"
            type="com.cassio.cassiobookstore.model.vo.BookVO" />

        <variable
            name="clickListeners"
            type="com.cassio.cassiobookstore.view.activity.BookClickListener" />


    </data>

    <!-- app:loadImageThumb="@{bookRow.volumeInfoDTO.imageLinksDTO.smallThumbnail}" -->
    <FrameLayout
        android:id="@+id/item_book_container"
        android:background="@color/grayDark"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/imgbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryTransparent" />

        <LinearLayout
            android:id="@+id/container_book_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/my_ripple"
            android:gravity="center_vertical"
            android:onClick="@{() -> clickListeners.onBookClicked(bookVO)}"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgmini"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/books_title"
                    android:layout_gravity="center_vertical"
                    style="@style/text_view_row_book"
                    android:text="@{bookVO.title}"
                    tools:text="Melhor Livro de Android de todos os tempos. Realmente Imperdível. Volume 3 Melhor Livro de Android de todos os tempos. Realmente Imperdível. Volume 3 Melhor Livro de Android de todos os tempos. Realmente Imperdível. Volume 3 " />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grayDarkTransparent"
            android:layout_gravity="bottom"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/grayDarkTransparent"
            android:layout_gravity="right"/>


    </FrameLayout>
</layout>